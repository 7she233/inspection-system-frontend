.event-create {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.nav-btn {
  font-size: 28rpx;
  color: #4776e6;
  padding: 12rpx 24rpx;
}

/* 主内容区 */
.main-content {
  margin-top: 88rpx;
  padding: 24rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

/* 文字描述 */
.description {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 照片部分 */
.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.photo-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.photo-add {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* AI分析 */
.ai-content {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部语音按钮 */
.voice-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.voice-record {
  display: flex;
  justify-content: center;
  padding: 16rpx 0;
}

.voice-btn {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  background: #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.voice-btn.recording {
  background: #e6f7ff;
  transform: scale(1.1);
}

.voice-icon {
  width: 80rpx;
  height: 80rpx;
  background: url('/assets/mic.png') no-repeat center/contain;
  margin-bottom: 16rpx;
}

.voice-btn text {
  font-size: 28rpx;
  color: #666;
}

/* 录音列表 */
.voice-list {
  margin-top: 16rpx;
}

.voice-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.voice-item:last-child {
  border-bottom: none;
}

.voice-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.voice-icon {
  width: 48rpx;
  height: 48rpx;
  background: url('/assets/voice-play.png') no-repeat center/contain;
  margin-right: 16rpx;
}

.voice-icon.playing {
  background-image: url('/assets/voice-playing.png');
  animation: playing 1s infinite;
}

@keyframes playing {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.voice-detail {
  flex: 1;
}

.voice-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.voice-text {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-top: 4rpx;
}

.voice-delete {
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-left: 16rpx;
}

/* 文字输入区域 */
.text-input-section {
  background: #fff;
  margin-bottom: 24rpx;
}

.text-input-area {
  position: relative;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 24rpx;
}

.description-input {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.input-counter {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: #999;
} 
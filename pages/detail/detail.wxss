page {
  background: #f0f6ff;
}

.detail-container {
  padding: 24rpx;
  min-height: 100vh;
}

.detail-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.detail-header {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #eef2ff;
  background: linear-gradient(135deg, #6e8efb, #4776e6);
  margin: -32rpx -32rpx 32rpx -32rpx;
  padding: 32rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.project-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  display: block;
  margin-bottom: 12rpx;
}

.inspection-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.section {
  margin-bottom: 32rpx;
  background: #f8faff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  padding: 12rpx 0;
}

.photo-item {
  position: relative;
  padding-bottom: 100%;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.photo-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.photo-item:active image {
  transform: scale(0.95);
}

.audio-player {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
} 
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.btn-primary {
  background: #07C160;
  color: #fff;
  flex: 1;
  margin: 0 10rpx;
}

.btn-default {
  background: #fff;
  color: #333;
  flex: 1;
  margin: 0 10rpx;
}

/* 记录列表样式 */
.record-list {
  background: #fff;
  border-radius: 8rpx;
  margin-top: 20rpx;
  padding: 20rpx;
}

.list-header {
  font-size: 32rpx;
  font-weight: 500;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-title {
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 设置入口样式 */
.settings {
  text-align: center;
  padding: 30rpx 0;
  color: #666;
  font-size: 28rpx;
}

.recent-inspections {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.recent-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.inspection-list {
  margin-bottom: 24rpx;
  min-height: 200rpx;
  position: relative;
}

.inspection-list.loading {
  opacity: 0.6;
  pointer-events: none;
}

.inspection-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
  transition: all 0.3s;
}

.inspection-item:active {
  background: #f5f7fa;
}

.inspection-item:last-child {
  border-bottom: none;
}

.inspection-info {
  flex: 1;
}

.inspection-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.inspection-date {
  font-size: 24rpx;
  color: #999;
}

.inspection-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  text-align: center;
}

.inspection-status.recording {
  background: #e6f7ff;
  color: #1890ff;
}

.inspection-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.more-btn {
  font-size: 28rpx;
  color: #4776e6;
  padding: 20rpx 0;
  text-align: center;
  border-top: 2rpx solid #eef2ff;
  transition: all 0.3s;
}

.more-btn:active {
  opacity: 0.8;
}

.new-inspection-btn {
  position: fixed;
  bottom: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #4776e6, #6e8efb);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(71, 118, 230, 0.3);
  transition: all 0.3s;
}

.new-inspection-btn:active {
  transform: translateX(-50%) scale(0.98);
  opacity: 0.9;
}

.empty-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

.user-card {
  background: linear-gradient(135deg, #6e8efb, #4776e6);
  color: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(71, 118, 230, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-right: 24rpx;
  background: #fff;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
} 
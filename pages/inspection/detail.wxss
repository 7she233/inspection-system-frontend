.inspection-detail {
  min-height: 100vh;
  background: #f5f7fa;
  box-sizing: border-box;
}

/* 导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 主内容区 */
.main-content {
  margin-top: 88rpx;
  padding: 24rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

/* 基本信息 */
.info-section {
  background: #fff;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 事件列表 */
.event-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.list-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.event-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.empty-tip {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
}

.empty-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 16rpx;
}

.event-items {
  margin-top: 24rpx;
}

.event-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.event-item:last-child {
  border-bottom: none;
}

.event-info {
  flex: 1;
}

.event-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.event-time {
  font-size: 24rpx;
  color: #999;
}

.event-media {
  display: flex;
  align-items: center;
  margin: 0 16rpx;
}

.event-photo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  background: url('/assets/voice.png') no-repeat center/contain;
}

.event-status {
  font-size: 24rpx;
  color: #4776e6;
  background: rgba(71, 118, 230, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
} 
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 24rpx;
  box-sizing: border-box;
}

.inspection-list {
  margin-bottom: 24rpx;
}

.inspection-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.inspection-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.inspection-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.inspection-location {
  font-size: 28rpx;
  color: #666;
}

.inspection-date {
  font-size: 24rpx;
  color: #999;
}

.inspection-status {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

/* 草稿状态 */
.inspection-status.draft {
  background: rgba(153, 153, 153, 0.1);
  color: #999999;
}

/* 进行中状态 */
.inspection-status.in-progress {
  background: rgba(71, 118, 230, 0.1);
  color: #4776e6;
}

/* 已完成状态 */
.inspection-status.completed {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

/* 已归档状态 */
.inspection-status.archived {
  background: rgba(102, 102, 102, 0.1);
  color: #666666;
}

.empty-tip {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 24rpx 0;
  color: #999;
  font-size: 24rpx;
} 
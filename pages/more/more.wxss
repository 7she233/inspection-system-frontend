page {
  background: #f0f6ff;
  min-height: 100vh;
}

.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #fff;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f5f7fa;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-input icon {
  margin-right: 12rpx;
  color: #999;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.date-filter {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f7fa;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
}

.date-filter image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.inspection-list {
  margin-top: 120rpx;
  height: calc(100vh - 120rpx);
  padding: 24rpx;
}

.inspection-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.item-date {
  font-size: 26rpx;
  color: #999;
}

.item-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.loading, .no-more {
  text-align: center;
  padding: 24rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.icon-calendar {
  margin-left: 8rpx;
  color: #666;
} 